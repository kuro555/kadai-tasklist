<h1>タスク管理アプリ</h1>

<h2>ログイン画面</h2>

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <%= f.label :email, 'Eメール' %>
    <%= f.email_field :email %>

    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password %>

    <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
  <% end %>
  <br>
  <br>
  <%= link_to 'ユーザー登録画面へ', new_user_path %>